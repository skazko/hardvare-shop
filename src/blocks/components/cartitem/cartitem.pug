mixin cartitem(sku, title, measure, cost, count, total, totalCount, id)
  tr.cart__item.cart-item
    td.cart-item__sku(data-title="Артикул")= sku
    td.cart-item__title(data-title="Наименование")= title
    td.cart-item__measure.center(data-title="Единица измерения")= measure
    td.cart-item__cost.right(data-title="Цена")= cost
    td.cart-item__count(data-title="Количество")
      .item-quantity
        label.screen-reader(for="id") Количество
        input(type="number", id= id, value= count, size="4", step=1, title="Количество", min=0, name="cart" + id)
    td.cart-item__total.right(data-title="Сумма")= total
    td.cart-item__total-count.right(data-title="Всего штук")= totalCount
    td.cart-item__remove
      a.inline-icon(href="#")
        +icon('cart-remove')